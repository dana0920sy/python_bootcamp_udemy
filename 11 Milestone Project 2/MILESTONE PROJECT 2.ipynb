    "# Take Bet\n",
    "def take_bet(chip):\n",
    "    while True:\n",
    "        try:\n",
    "            chip.bet_amt = int(input(\"Place your bet: \"))\n",
    "        except:\n",
    "            print(\"Invalid bet amount, please try again!\")\n",
    "        else:\n",
    "            if chip.bet_amt > chip.balance: \n",
    "                print(\"Sorry, your bet amount exceeds your chip balance\")\n",
    "            else:\n",
    "                print(\"Your bet was accepted.\")\n",
    "                return chip.bet_amt\n",
    "            "
   ]
