    "# Deck Class\n",
    "\n",
    "class Deck():\n",
    "    #construct\n",
    "    def __init__(self):\n",
    "        self.all_cards = []\n",
    "        \n",
    "        for suit in suits:\n",
    "            for rank in ranks:\n",
    "                self.all_cards.append(Card(suit,rank))\n",
    "    #Method to shuffle deck\n",
    "    def shuffle(self):\n",
    "        random.shuffle(self.all_cards)\n",
    "    #Method to deal one card to player or hand\n",
    "    def deal_one(self):\n",
    "        return self.all_cards.pop()"
   ]
