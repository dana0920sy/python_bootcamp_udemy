    "# Function for Hit or Stand\n",
    "\n",
    "def hit_or_stand():\n",
    "    while True: \n",
    "        player_choice = input(\"Hit or Stand?: \").capitalize()\n",
    "        if player_choice == \"Hit\" or player_choice == \"Stand\":\n",
    "            return player_choice\n",
    "            break\n",
    "        else:\n",
    "            print(\"I'm sorry, I didn't understand that\")"
   ]
