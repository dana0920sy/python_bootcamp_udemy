    "# Player Hand Class\n",
    "\n",
    "class Hand():\n",
    "    def __init__(self):\n",
    "        self.all_cards = []\n",
    "        self.total_value = 0\n",
    "        self.ace_counter = 0\n",
    "    def add_one(self,new_cards):\n",
    "        self.all_cards.append(new_cards)\n",
    "        self.total_value += new_cards.value\n",
    "        if new_cards.rank == \"Ace\":\n",
    "            self.ace_counter += 1\n",
    "    def adjust_for_ace(self):\n",
    "        while self.total_value > 21 and self.ace_counter > 0:\n",
    "            self.total_value -= 10\n",
    "            self.ace_counter -=1"
   ]
