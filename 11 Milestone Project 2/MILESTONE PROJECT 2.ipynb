    "# Game Code\n",
    "\n",
    "# Global variables\n",
    "#Enter balance\n",
    "while True:\n",
    "    try:\n",
    "        balance = int(input(\"Enter your balance:\"))\n",
    "        break\n",
    "    except:\n",
    "        print(\"Sorry, please enter a valid integer value for your balance\")\n",
    "# Declare Chip balance\n",
    "chip = Bank(balance)\n",
    "\n",
    "game_on = True\n",
    "while True:\n",
    "    \n",
    "    # Welcome message\n",
    "    print(\"\\nWelcome to Blackjack! Get as close to 21 as possible without going over.\\nDealer hits until they reach 17.\\n Aces count as 1 or 11.\")\n",
    "\n",
    "    # Create deck and shuffle cards\n",
    "    new_deck = Deck()\n",
    "    new_deck.shuffle()\n",
    "    \n",
    "\n",
    "    # Declare instances of player and dealer\n",
    "    player = Hand()\n",
    "    dealer = Hand()\n",
    "    \n",
    "    #Take a bet\n",
    "    take_bet(chip)\n",
    "\n",
    "    # Deal two cards to each player\n",
    "    for i in range(2):\n",
    "        dealer.add_one(new_deck.deal_one())\n",
    "\n",
    "    for i in range(2):\n",
    "        player.add_one(new_deck.deal_one())\n",
    "\n",
    "    # Show hands of player card\n",
    "    show_some(player,dealer)\n",
    "    # Insert while loop here.\n",
    "    while game_on:\n",
    "    # take_bet()\n",
    "    # Ask player to hit or stand\n",
    "        choice = hit_or_stand()\n",
    "\n",
    "        if choice == 'Hit':\n",
    "            take_hit(new_deck, player)\n",
    "            show_some(player,dealer)\n",
    "            # Player busts. Exit out of loop\n",
    "            if player.total_value > 21:\n",
    "                player_busts(player,dealer,chip)\n",
    "                break\n",
    "        else:\n",
    "            break\n",
    "    #If player doesn't Hit Player not bust\n",
    "    if player.total_value <=21:\n",
    "        #Dealer hits until value reaches 17\n",
    "        while dealer.total_value<17:\n",
    "            take_hit(new_deck,dealer)\n",
    "        show_all(player,dealer)\n",
    "        # If dealer busts\n",
    "        if dealer.total_value > 21:\n",
    "            dealer_busts(player,dealer,chip)\n",
    "        # if dealer wins\n",
    "        elif dealer.total_value <= 21 and dealer.total_value>player.total_value:\n",
    "            dealer_wins(player,dealer,chip)\n",
    "        # if player wins\n",
    "        elif dealer.total_value <= 21 and dealer.total_value<player.total_value:\n",
    "            player_wins(player,dealer,chip)\n",
    "        # if there is a draw\n",
    "        elif dealer.total_value == player.total_value:\n",
    "            print(\"Dealer and Player tie! It's a push\")\n",
    "    # Running balance\n",
    "    \n",
    "    print(\"Your running balance of chips is {}\".format(chip.balance))\n",
    "    \n",
    "    #Ask if player wants to play again\n",
    "    play_again = input(\"Do you want to play again? y or n: \")\n",
    "    if play_again == 'y':\n",
    "        game_on = True\n",
    "        continue\n",
    "    else:\n",
    "        print(\"Thanks for playing!\")\n",
    "        break\n",
    "\n",
    "\n",
    "    \n"
   ]
