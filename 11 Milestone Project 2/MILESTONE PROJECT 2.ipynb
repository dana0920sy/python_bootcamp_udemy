    "# Bank Class\n",
    "class Bank():\n",
    "    def __init__(self, balance):\n",
    "        self.balance = balance\n",
    "        self.bet_amt = 0\n",
    "    def win_bet(self):\n",
    "        self.balance = self.balance + self.bet_amt\n",
    "        print(\"Your current balance is {}\".format(self.balance))\n",
    "    def lose_bet(self):\n",
    "        self.balance = self.balance - self.bet_amt\n",
    "        print(\"Your current balance is {}\".format(self.balance))"
   ]
  },
